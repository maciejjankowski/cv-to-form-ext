{
  "manifest_version": 3,
  "name": "CV AutoFill",
  "version": "1.0",
  "description": "Automatyczne wype≈Çnianie formularzy aplikacyjnych na podstawie CV w formacie JSON.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions":[
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://solid.jobs/*", "https://*.traffit.com/*", "https://*.erecruiter.pl/*", "https://*.recruitify.ai/*", "https://*.greenhouse.io/*", "https://jobs.lever.co/*", "https://*.myworkdayjobs.com/*", "https://*.bamboohr.com/*", "https://*/*"],
      "js": ["mappers/solidJobsMapper.js", "mappers/traffitMapper.js", "mappers/eRecruiterMapper.js", "mappers/recruitifyMapper.js", "mappers/greenhouseMapper.js", "mappers/leverMapper.js", "mappers/workdayMapper.js", "mappers/bamboohrMapper.js", "content.js"],
      "run_at": "document_idle"
    }
  ]
}

